{
  "version": "rt.db.v1",
  "table": "DB.City",
  "description": "City db model",
  "columns": {
    "id": { "type": "PK", "query": ["=", "in"], "required": true },
    "name": {
      "type": "String256",
      "query": ["=", "in", "like"],
      "order": true,
      "description": "City name",
      "required": true
    },
    "geo": { "type": "DB.Geo", "query": ["=", "in"] },
    "active": { "type": "Bool", "query": ["=", "in"] }
  },
  "views": {
    "Full": {
      "cache": "30d",
      "columns": ["id", "name", "geo@Full", "active"]
    }
  }
}
